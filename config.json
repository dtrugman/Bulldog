{
    "target": {
        "name": "python"
    },
    "investigator": {
        "memory": {
            "threshold": 1000
        },
        "cpu": {
            "threshold": 95
        }
    },
    "cycler": {
        "freq": 1,
        "manifest": [
            {
                "check": [ "running" ],
                "react": [ "start" ]
            },
            {
                "check": [ "memory", "cpu" ],
                "react": [ "restart" ]
            }
        ]
    }
}