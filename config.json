{
    "log": {
        "dir": ".",
        "level": 10
    },
    "watchdogs":{
        "mem_eater":
        {
            "handler": {
                "start": {
                    "cmd": "/home/dt/Documents/WatchDog/examples/mem_eater.out",
                    "args": [ ]
                }
            },
            "inspector": {
                "target": {
                    "exe": "/home/dt/Documents/WatchDog/examples/mem_eater.out"
                },
                "memory": {
                    "threshold": 100000000,
                    "period": 1,
                    "set": "uss"
                },
                "cpu": {
                    "threshold": 95
                }
            },
            "triggers": {
                "cycler": {
                    "freq": "5",
                    "manifest": [
                        {
                            "check": [ "running" ],
                            "reaction": [ "start" ]
                        },
                        {
                            "check": [ "memory", "cpu" ],
                            "reaction": [ "restart" ]
                        }
                    ]
                },
                "rest": {
                    "ip": "localhost",
                    "port": 8000
                }
            }
        },
        "cpu_eater":
        {
            "handler": {
                "start": {
                    "cmd": "/home/dt/Documents/WatchDog/examples/cpu_eater.out",
                    "args": [ ]
                }
            },
            "inspector": {
                "target": {
                    "exe": "/home/dt/Documents/WatchDog/examples/cpu_eater.out"
                },
                "cpu": {
                    "threshold": 95
                }
            },
            "triggers": {
                "cycler": {
                    "freq": 3,
                    "manifest": [
                        {
                            "check": [ "running" ],
                            "reaction": [ "start" ]
                        },
                        {
                            "check": [ "cpu" ],
                            "reaction": [ "restart" ]
                        }
                    ]
                }
            }
        }
    }
}